{
  "private": true,
  "name": "ci-queue",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "forever ./bin/www",
    "dev": "DEBUG=app:* NODE_ENV=development nodemon ./bin/www"
  },
  "engines": {
    "node": "^10"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "cookie-parser": "~1.4.4",
    "debug": "~4.1.1",
    "express": "~4.16.4",
    "forever": "^1.0.0",
    "hbs": "~4.0.4",
    "helmet": "^3.16.0",
    "http-errors": "~1.7.2",
    "morgan": "~1.9.1",
    "newrelic": "^5.6.4",
    "node-sass-middleware": "^0.11.0",
    "redis": "^2.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0"
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "plugins": [
      "prettier"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "prefer-arrow-callback": "error",
      "arrow-body-style": "error",
      "no-var": "error",
      "prefer-const": "error",
      "prefer-spread": "error",
      "prefer-destructuring": "error",
      "prefer-template": "error"
    }
  },
  "prettier": {
    "printWidth": 120
  }
}
